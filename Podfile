  # Utility

  pod 'ReSwift'
  pod 'ReSwiftThunk'
  pod 'RxSwift', '~> 5'
  pod 'RxCocoa', '~> 5'
  pod 'DeviceKit', '~> 2.0'
  pod 'SwiftyUserDefaults', '~> 5.0'

  # keyboard

  pod 'IQKeyboardManagerSwift'

  # View

  pod 'SwiftMessages'
  pod 'Parchment'

  # Animation

  pod "ViewAnimator"
  pod 'VegaScrollFlowLayout'
  pod 'FoldingCell'

end

